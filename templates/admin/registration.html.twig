{% extends 'base.html.twig' %}

{% block title %} Administrateur{% endblock title %}

{% block body %}
    <h3>Inscription Administrateur</h3>

    <div class="well">
        {{
            form_start(formRegistration, {
                'attr' : {
                    'class' : 'form-horizontal'
                }
            })
        }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(formRegistration) }}

        {# Génération manuelle et éclatée #}
        <div class="form-group">

            {# Génération du label #}
            {{
                form_label(formRegistration.email, "Email : ",{
                    'label_attr' : {
                        'class' : 'col-sm-2 control-label'
                    }
                })
            }}

            {# Affichage des erreurs pour ce champ email #}
            {{ form_errors(formRegistration.email) }}

            <div class="col-sm-10">
                {# Génération de l'input #}
                {{
                    form_widget(formRegistration.email,{
                        'attr' : {
                            'class' : 'form-control'
                        }
                    })
                }}
            </div>
        </div>


        {# Génération manuelle et éclatée #}
        <div class="form-group">

            {# Génération du label #}
            {{
                form_label(formRegistration.password, "Mot de passe : ",{
                    'label_attr' : {
                        'class' : 'col-sm-2 control-label'
                    }
                })
            }}

            {# Affichage des erreurs pour ce champ password #}
            {{ form_errors(formRegistration.password) }}

            <div class="col-sm-10">
                {# Génération de l'input #}
                {{
                    form_widget(formRegistration.password,{
                        'attr' : {
                            'class' : 'form-control'
                        }
                    })
                }}
            </div>
        </div>


        {# Génération manuelle et éclatée #}
        <div class="form-group">

            {# Génération du label #}
            {{
                form_label(formRegistration.confirm_password, "Confirmez le mot de passe : ",{
                    'label_attr' : {
                        'class' : 'col-sm-2 control-label'
                    }
                })
            }}

            {# Affichage des erreurs pour ce champ confirm_password #}
            {{ form_errors(formRegistration.confirm_password) }}

            <div class="col-sm-10">
                {# Génération de l'input #}
                {{
                    form_widget(formRegistration.confirm_password,{
                        'attr' : {
                            'class' : 'form-control'
                        }
                    })
                }}
            </div>
        </div>



        {# generation automatique des champs pas encore écrit
        et tous les champs caché de type hidden comme la CRSF #}
        {{ form_rest(formRegistration) }}

        <button> S'inscrire </button>
        {# fermeture de la balise form #}
        {{ form_end(formRegistration) }}
    </div>

    <p>
        Créer une classe AuteurController pour avoir le roles ROLE_AUTEUR lorsqu'on s'inscrit en tant que Employeur
    </p>

{% endblock body %}